<h1>Create a new restaurant</h1>

<%= form_for @restaurant do |f| %>
  <%= f.label :name, 'Name' %>
  <%= f.text_field :name %><br />
  <%= f.label :address, 'Address' %>
  <%= f.text_field :address %><br />
  <%= f.label :phone_number, 'phone_number' %>
  <%= f.text_field :phone_number %><br />
  <%= f.select :category, [['Chinese','chinese'], ['Italian','italian'], ['Japanese','japanese'], ['French','french'], ['Belgian','belgian']] %>
  <%= f.submit %>
<% end %>
